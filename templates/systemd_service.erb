[Unit]
Description=tempomat

[Service]
ExecStart=/usr/local/bin/tempomat \
	-listen-port <%= scope['tempomat::listen_port'] %> \
	-backend <%= scope['tempomat::backend'] %> \
	-log-file /var/log/tempomat/app.log \
	-stats-file /var/log/tempomat/stats.log \
	<%= @trusted_proxies_flag %> \
	<%= @debug_flag %>
User=<%= scope['tempomat::user'] %>

[Install]
WantedBy=multi-user.target
